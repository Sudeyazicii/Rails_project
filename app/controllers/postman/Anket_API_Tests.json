{
  "info": {
    "name": "Anket_API_Tests",
    "_postman_id": "anket-api-collection-id",
    "description": "Login, kullanıcı listeleme ve kullanıcı oluşturma testleri",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Login (JWT alma)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"sudenur@example.com\",\n  \"password\": \"123456\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/v1/login",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "v1",
            "login"
          ]
        }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "var jsonData = pm.response.json();",
              "if (jsonData.token) {",
              "  pm.environment.set('jwt_token', jsonData.token);",
              "  console.log('✅ Token kaydedildi:', jsonData.token);",
              "} else {",
              "  console.log('⚠️ Token alınamadı');",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Kullanıcıları Listele (GET /api/v1/users)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Accept",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{jwt_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/v1/users",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "v1",
            "users"
          ]
        }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Durum kodu 200 dönmeli', function () {",
              "  pm.response.to.have.status(200);",
              "});",
              "pm.test('Cevap JSON formatında olmalı', function () {",
              "  pm.response.to.be.json;",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Yeni Kullanıcı Oluştur (POST /api/v1/users)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{jwt_token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"user\": {\n    \"name\": \"Ayşe Yılmaz\",\n    \"email\": \"ayşe@example.com\"\n  }\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/v1/users",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "v1",
            "users"
          ]
        }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Durum kodu 201 (Created) dönmeli', function () {",
              "  pm.response.to.have.status(201);",
              "});",
              "pm.test('Yanıt kullanıcı bilgisi içermeli', function () {",
              "  var jsonData = pm.response.json();",
              "  pm.expect(jsonData).to.have.property('id');",
              "  pm.expect(jsonData).to.have.property('name');",
              "  pm.expect(jsonData).to.have.property('email');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    }
  ]
}